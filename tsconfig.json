{
    "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2023"],
    "module": "node16",
    "moduleResolution": "node16",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "outDir": "dist"
    },
    "include": [
        "src/**/*.ts",
    ],
    "typeRoots": [
        "./src",
        "./node_modules/@types/"
    ]
}